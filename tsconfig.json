{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@styles/*": [
        "styles/*"
      ],
      "@handlers/*": [
        "handlers/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@vectors/*": [
        "vectors/*"
      ],
      "@utilities/*": [
        "utilities/*"
      ],
      "@client/*": [
        "handlers/client/*"
      ],
      "@server/*": [
        "handlers/server/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@init/*": [
        "handlers/init/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["./out/**/*", "./node_modules/**/*", "**/*.cy.ts"],
}
